{
  "name": "tiered-file-system-api",
  "version": "1.0.0",
  "description": "SaaS File Management System backend (Express + TypeScript + Prisma + PostgreSQL).",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --ext ts --exec tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "seed": "prisma db seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "express-rate-limit": "^7.5.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "prisma": "^6.5.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}

